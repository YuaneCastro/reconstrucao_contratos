<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmar Cadastro</title>
    <link rel="stylesheet" href="/assets/js/confirm.css">
</head>
<body>
    <h2>Digite o cÃ³digo de confirmaÃ§Ã£o enviado para seu e-mail</h2>
    <input type="text" id="otpInput" placeholder="Digite o cÃ³digo">
    <button onclick="verifyOTP()">Confirmar</button>
    <p id="message"></p>

    <script>
        async function verifyOTP() {
            const code = document.getElementById('otpInput').value;
            const email = "<%= email %>";

            const response = await fetch('/verifyOTP', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, code })
            });

            const data = await response.json();
            document.getElementById('message').innerText = data.message;

            if (response.ok && data.token) {
                localStorage.setItem("token", data.token); // ðŸ”‘ Salva token
                document.cookie = `token=${data.token}; path=/`; // ðŸ”‘ Salva como cookie
                window.location.href = "/dashboard"; // ðŸ”„ Redireciona
            }
        }
    </script>
</body>
</html>
