<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Gest√£o</title>
    <link rel="stylesheet" href="/assets/css/dashboard-coordenacao.css">
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <p class="clickable">Novo Contrato</p>
        <p class="clickable">Log de Atividades</p>
        <P class="clickable">logs login</P>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul>
            <li onclick="showSection('dashboard')">Dashboard</li>
            <li onclick="showSection('students')">Estudantes</li>
            <li onclick="showSection('guardians')">Encarregados</li>
            <li onclick="showSection('contracts')">Contratos</li>
            <li onclick="showSection('announcements')">Comunicados</li>
            <li onclick="showSection('logs')">Logs de Login</li>
            <li onclick="showSection('student-registration')">Cadastrar Estudante</li>
            <li id="logout-button">Terminar Sess√£o</li>
        </ul>
    </div>

    <!-- √Årea Principal -->
    <div class="main-content">
        <div id="dashboard" class="section active">
            <h2>Dashboard</h2>
            <p>Resumo geral do sistema.</p>
        </div>

        <div id="students" class="section">
            <div class="container">
                <h2>Lista de Estudantes</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NOME</th>
                            <th>DATA DE NASCIMENTO</th>
                            <th>CLASSE</th>
                            <th>TURMA</th>
                            <th>CURSO</th>
                            <th>ID DO ENCARREGADO</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(estudantes.length > 0){ %>
                            <% estudantes.forEach(students =>{  %>
                                <tr>
                                    <td><%= students.id %></td>
                                    <td><%= students.nome %></td>
                                    <td><%= new Date(students.data_nascimento).toLocaleString('pt-PT') %></td>
                                    <td><%= students.classe %></td>
                                    <td><%= students.turma %></td>
                                    <td><%= students.curso%></td>
                                    <td><%= students.encarregado_id %></td>
                                </tr>
                            <% });  %>   
                        <% }else{ %>
                            <tr>
                                <td colspan="8">Nenhum estudante encontrado.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div id="guardians" class="section">
            <div class="container">
                <h2>Lista de Encarregados</h2>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Telefone</th>
                            <th>Criado em</th>
                            <th>Atualizado em</th>
                            <th>A√ß√µes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (encarregados.length > 0) { %>
                            <% encarregados.forEach(guardiao => { %>
                                <tr>
                                    <td><%= guardiao.id %></td>
                                    <td><%= guardiao.nome %></td>
                                    <td><%= guardiao.email %></td>
                                    <td><%= guardiao.telefone %></td>
                                    <td><%= new Date(guardiao.criado_em).toLocaleString('pt-PT') %></td>
                                    <td><%= new Date(guardiao.atualizado_em).toLocaleString('pt-PT') %></td>
                                    <td class="actions">
                                        <span class="edit-btn">‚úèÔ∏è</span>
                                        <span class="delete-btn">üóëÔ∏è</span>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="8">Nenhum encarregado encontrado.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div id="contracts" class="section">
            <h2>Gest√£o de Contratos</h2>
            <p>Gerencie os contratos cadastrados.</p>
        </div>

        <div id="student-registration" class="section">
            <div class="container-cadastro">
                <h2>Cadastro de Estudante</h2>
                <form action="/cadastro" method="POST" onsubmit="return validarFormulario()">
                    <div class="form-group">
                        <label for="nome">Nome do Estudante</label>
                        <input type="text" name="nome" id="nome" placeholder="Nome do estudante" required>
                    </div>

                    <div class="form-group">
                        <label for="data_nascimento">Data de Nascimento</label>
                        <input type="date" name="data_nascimento" id="data_nascimento" required>
                    </div>

                    <div class="form-group">
                        <label for="classe">Classe</label>
                        <select name="classe" id="classe" required onchange="verificarClasse()">
                            <option value="" disabled selected>Selecione a classe</option>
                            <option value="1¬™ Classe">1¬™ Classe</option>
                            <option value="2¬™ Classe">2¬™ Classe</option>
                            <option value="3¬™ Classe">3¬™ Classe</option>
                            <option value="4¬™ Classe">4¬™ Classe</option>
                            <option value="5¬™ Classe">5¬™ Classe</option>
                            <option value="6¬™ Classe">6¬™ Classe</option>
                            <option value="7¬™ Classe">7¬™ Classe</option>
                            <option value="8¬™ Classe">8¬™ Classe</option>
                            <option value="9¬™ Classe">9¬™ Classe</option>
                            <option value="10¬™ Classe">10¬™ Classe</option>
                            <option value="11¬™ Classe">11¬™ Classe</option>
                            <option value="12¬™ Classe">12¬™ Classe</option>
                            <option value="13¬™ Classe">13¬™ Classe</option>
                        </select>
                    </div>

                    <div class="form-group" id="cursoContainer" style="display: none;">
                        <label for="curso">Curso</label>
                        <select name="curso" id="curso">
                            <option value="" disabled selected>Selecione o curso</option>
                            <option value="Ci√™ncias Exatas">Ci√™ncias Exatas</option>
                            <option value="Ci√™ncias Biol√≥gicas">Ci√™ncias Biol√≥gicas</option>
                            <option value="Ci√™ncias Humanas">Ci√™ncias Humanas</option>
                            <option value="Eletrotecnia">Eletrotecnia</option>
                            <option value="Inform√°tica">Inform√°tica</option>
                            <option value="Constru√ß√£o Civil">Constru√ß√£o Civil</option>
                            <option value="Gest√£o e Economia">Gest√£o e Economia</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="turma">Turma</label>
                        <input type="text" name="turma" id="turma" placeholder="Turma" required>
                    </div>

                    <h3>Dados do Encarregado</h3>

                    <div class="form-group">
                        <label for="encarregado_nome">Nome</label>
                        <input type="text" name="encarregado_nome" id="encarregado_nome" placeholder="Nome do encarregado" required>
                    </div>

                    <div class="form-group">
                        <label for="encarregado_email">E-mail</label>
                        <input type="email" name="encarregado_email" id="encarregado_email" placeholder="E-mail do encarregado" required>
                    </div>

                    <div class="form-group">
                        <label for="telefone">N√∫mero de telefone</label>
                        <input type="text" name="telefone" id="telefone" placeholder="Telefone do encarregado" required>
                    </div>

                    <button type="submit" class="btn-cadastrar">Cadastrar Estudante</button>
                </form>
            </div>
        </div>
    </div>

    <script src="/assets/js/dashboard-coordenacao.js"></script>
</body>
</html>
