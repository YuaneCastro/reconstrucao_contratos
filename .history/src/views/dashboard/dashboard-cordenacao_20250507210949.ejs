<!DOCTYPE html>
<html lang="pt-PT">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel de Gest√£o</title>
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/dashboard-coordenacao.css">
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar">
        <p class="clickable" onclick="showSection('novo_contrato')">Novo Documento</p>
        <P class="clickable" onclick="showSection('logs')">logs de login</P>
    </div>

    <!-- Sidebar -->
    <div class="sidebar">
        <ul>
            <li onclick="showSection('dashboard')">Dashboard</li>
            <li class="clickable" onclick="toggleSubmenu('users-menu')">Usu√°rios</li>
            <ul id="users-menu" class="submenu">
                <li id="Cadastrar" onclick="showSection('student-registration')">Cadastrar</li>
                <li onclick="showSection('students')">Estudantes</li>
                <li onclick="showSection('guardians')">Encarregados</li>
            </ul>
            <li class="clickable" onclick="toggleSubmenu('documents-menu')">Documentos</li>
            <ul id="documents-menu" class="submenu">
                <li onclick="showSection('contracts')">Contratos</li>
                <li onclick="showSection('comunicados')">Comunicados</li>
            </ul>
            
            <li id="logout-button" onclick="informar()">Terminar Sess√£o</li>
        </ul>
    </div>

    <!-- √Årea Principal -->
    <div class="main-content">
        <div id="novo_contrato" class="section">
            <div class="container-contrato">
                <h2 id="formTitle">Criar Novo Documento</h2>
                <form id="contratoForm">

                     <!-- Tipo de Documento -->
                    <div class="form-group">
                        <label for="tipoDocumento">Tipo de Documento</label>
                        <select id="tipoDocumento" name="tipoDocumento" onchange="atualizarTituloFormulario()" required data-erro-id="erroTipoDocumento">
                            <option value="">secione o tipo do Documento</option>
                            <option value="contrato">Contrato</option>
                            <option value="comunicado">Comunicado</option>
                        </select>
                        <small id="erroTipoDocumento" class="erro-mensagem"></small>
                    </div>
                  <!-- T√≠tulo -->
                  <div class="form-group">
                    <label for="titulo">T√≠tulo do Contrato</label>
                    <input type="text" id="titulo" name="titulo" required data-erro-id="erroTitulo">
                    <small id="erroTitulo" class="erro-mensagem"></small>
                  </div>
            
                  <!-- Container de Especifica√ß√µes -->
                  <div id="especificacoesContainer"></div>
            
                  <button type="button" onclick="adicionarEspecificacao()">+ Adicionar Raiz/Especifica√ß√£o</button>
                  
                  <!-- Data de Expira√ß√£o (s√≥ para contratos) -->
                <div class="form-group" id="dataExpiracaoGroup">
                    <label for="dataExpiracao">Data de Expira√ß√£o</label>
                    <input type="date" id="dataExpiracao" name="dataExpiracao"  data-erro-id="erroDataExpiracao">
                    <small id="erroDataExpiracao" class="erro-mensagem"></small>
                </div>
  
                  <div class="form-group checkbox-highlight">
                    <label>
                      <input type="checkbox" id="enviarTodos" name="enviar_todos" value="1">
                      Enviar para <strong>todos os encarregados</strong> (sem exce√ß√£o)
                    </label>
                  </div>
                  
                  <!-- Conte√∫do -->
                  <div class="form-group">
                    <label for="conteudo">Conte√∫do</label>
                    <textarea id="conteudo" name="conteudo" rows="6" required data-erro-id="erroConteudo"></textarea>
                    <small id="erroConteudo" class="erro-mensagem"></small>
                  </div>
                  
                  <button type="submit" id="botao_guardar">Guardar</button>
                  <button type="submit" id="botaoSubmit">Criar Documento</button>
                </form>
              </div>
        </div>
        <div id="logs" class="section">
            <h1>Bom dia</h1>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>IP</th>
                        <th>Foi logado</th>
                        <th>Data de envio</th>
                        <th>Data de Login</th>
                    </tr>
                </thead>
                <% logs.sort((a, b) => b.id - a.id); %>
                <tbody>
                    <% logs.forEach(log => { %>
                        <tr>
                            <td><%= log.id %></td>
                            <td><%= log.ip %></td>
                            <td><%= log.usado ? 'Sim' : 'N√£o' %></td>
                            <td><%= log.data_envio ? new Date(log.data_envio).toLocaleString() : '-' %></td>
                            <td><%= log.data_login ? new Date(log.data_login).toLocaleString() : '-' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>    


        <div id="dashboard" class="section active">
            <h2>Documentos inacabados</h2>
            <% if(documentos.length > 0){ %>
                <div class="documentos-grid">
                  <% documentos.forEach(doc => { %>
                    <div class="documento-card">
                      <h4><%= doc.titulo %></h4>
                      <p><strong>Tipo:</strong> <%= doc.tipo %></p>
                      <p><strong>Data de cria√ß√£o:</strong> <%= new Date(doc.criado_em).toLocaleDateString('pt-BR') %></p>  
                      <p><strong>Ultima atualizacao:</strong> <%= new Date(doc.atualizado_em).toLocaleDateString('pt-BR') %></p>                  
                      <button 
                      onclick="Editar_documento(this)"
                      class="view-btn"
                      data-id="<%= doc.id %>"
                      data-tipo="<%= doc.tipo %>"
                      data-titulo="<%= doc.titulo %>"
                      data-descricao="<%= doc.descricao %>"
                      data-data_emissao="<%= new Date(doc.data_emissao).toLocaleDateString('pt-BR') %>"
                      data-criado_em="<%= doc.tipo %>"
                      data_expiracao="<%= doc.data_emissao %>"
                      >üìÑ Editar e enviar</button>                     
                    </div>
                  <% }); %>
                </div>
              <% } else { %>
                <p>Nenhum novo contrato.</p>
              <% } %>
        </div>
        <div id="edit_contrato" class></div>


        <div id="students" class="section">
            <div class="container">
                <h2>Lista de Estudantes</h2>
                <table>
                    <thead>
