<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Validação de Input</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }
    input {
      padding: 8px;
      font-size: 16px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }
    button {
      padding: 8px 12px;
      margin-left: 10px;
      border: none;
      background-color: #4CAF50;
      color: white;
      border-radius: 8px;
      cursor: pointer;
    }
    p {
      margin-top: 10px;
      font-weight: bold;
    }
    .erro {
      color: red;
    }
    .correto {
      color: green;
    }
  </style>
</head>
<body>

  <h2>Validação de Texto</h2>
  <input type="text" id="texto" placeholder="Digite algo...">
  <button onclick="validarTexto()">Verificar</button>
  <p id="mensagem"></p>

  <script>
    function validarTexto() {
      const input = document.getElementById('texto').value;
      const mensagem = document.getElementById('mensagem');
      const regex = /\d/; // Expressão regular que verifica se existe número

      if (regex.test(input)) {
        mensagem.textContent = 'Não pode digitar números!';
        mensagem.className = 'erro';
      } else {
        mensagem.textContent = 'Texto válido!';
        mensagem.className = 'correto';
      }
    }
  </script>

</body>
</html>
